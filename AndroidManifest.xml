<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plingnote"
    android:versionCode="1"
    android:versionName="@string/app_version_name" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
       <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    
    <application
        android:icon="@drawable/plingnote_icon2"
        android:label="@string/app_name" >
        
        <uses-library android:required="true" android:name="com.google.android.maps" />
        
        <meta-data android:name="android.app.default_searchable"
                   android:value=".ActivitySearch" />
        <provider android:name=".SearchSuggestionsRecentProvider"
              android:exported="false" 
              android:authorities="com.plingnote.SearchSuggestionsRecentProvider" />
         
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      
        <activity 
            android:name=".ActivitySearch"
            android:exported="false" 
            android:launchMode="singleTop" >
	 		<intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
    		<meta-data android:name="android.app.searchable"
                 android:resource="@xml/searchable" />
	    </activity>
	    
        <activity 
            android:name=".ActivityAppPreference"
            android:exported="false"
            android:label="@string/plingnote_settings" >
			<intent-filter>
				<action android:name="com.plingnote.ActivityAppPreference" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
        <activity
           android:name=".ActivityNote"
           android:label="@string/title_activity_note" >
           <meta-data
               android:name="android.support.PARENT_ACTIVITY"
               android:value="com.plingnote.ActivityMain" />
       	</activity>
      
        <activity android:name=".ActivityMap" 
            android:label="@string/app_name" />

       	  <receiver android:name=".NoteNotification" >          
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" >
                    <action android:name="android.intent.action.SEND" />
                </action>
            </intent-filter>
        </receiver>
    </application>
</manifest>

